{
  "name": "homework-10",
  "version": "1.0.0",
  "description": "knex package",
  "main": "./src/index.js",
  "scripts": {
    "migrateUp": "./node_modules/.bin/knex --knexfile=./src/config/knexfile migrate:latest",
    "pgCRUD": "node ./src/pgCRUD.js",
    "knexCRUD": "node ./src/knexCRUD.js",
    "migrateDown": "./node_modules/.bin/knex --knexfile=./src/config/knexfile migrate:down",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix ./src"
  },
  "engines": {
    "node": "^12.14.1"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "knex": "^0.20.8",
    "pg": "^7.18.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.0.9",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "plugin:node/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-plusplus": "off",
      "no-bitwise": "off",
      "no-console": "off",
      "prettier/prettier": "error",
      "node/exports-style": "error",
      "node/prefer-global/console": "error",
      "node/prefer-global/process": "error",
      "node/prefer-global/url": "error",
      "node/prefer-promises/fs": "error"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  }
}
